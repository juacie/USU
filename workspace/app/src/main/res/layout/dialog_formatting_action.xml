<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Index = " />
        <EditText
            android:id="@+id/edt_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLength="5"
            android:singleLine="true"
            android:digits="0123456789"
            android:hint="Based on 1"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Length = " />
        <EditText
            android:id="@+id/edt_range"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLength="5"
            android:singleLine="true"
            android:digits="0123456789"
            android:hint="0 is the string after Index position"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Switch Case = " />
      <Spinner
          android:id="@+id/spinner_symbol"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Content = " />
        <EditText
            android:id="@+id/edt_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/ps_lf_0x0a_tab_0x09"
            android:layout_weight="3" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_regex_replace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Replace RegEx = " />
        <EditText
            android:id="@+id/edt_regexReplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="$0"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>