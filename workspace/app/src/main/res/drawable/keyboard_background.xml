<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item
        android:state_focused="false"
        android:state_pressed="false"
        android:state_selected="false" >
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/keyboard_normal_inside_background" />
            <stroke
                android:width="3dp"
                android:color="@color/keyboard_normal_background" />
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true" >
        <shape>
            <stroke
                android:width="3dp"
                android:color="@color/keyboard_press_background" />
            <solid android:color="@color/keyboard_press_inside_background" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>