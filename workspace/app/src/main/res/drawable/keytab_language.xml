<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item  android:state_checked="false" android:state_focused="false" android:state_pressed="false" android:state_selected="false" >
        <layer-list xmlns:tools="http://schemas.android.com/tools">
            <item >
                <shape>
                    <solid android:color="@color/keyboard_tab_normal_background" />
                </shape>
            </item>
            <item
                android:width="24dp"
                android:height="24dp"
                android:drawable="@drawable/keyboard_language"
                android:gravity="center"
                tools:targetApi="m"/>
        </layer-list>
    </item>

    <!-- Pressed state -->
    <item  android:state_checked="true" >
        <layer-list xmlns:tools="http://schemas.android.com/tools">
            <item>
                <shape>
                    <solid android:color="@color/keyboard_normal_background" />
                </shape>
            </item>
            <item
                android:width="24dp"
                android:height="24dp"
                android:drawable="@drawable/keyboard_language"
                android:gravity="center"
                tools:targetApi="m"/>
        </layer-list>
    </item>
</selector>

